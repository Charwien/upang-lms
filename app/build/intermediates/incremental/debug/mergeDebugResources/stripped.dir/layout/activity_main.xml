<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="434dp"
        android:layout_height="286dp"
        android:layout_margin="20dp"
        android:background="@drawable/oval"
        android:orientation="vertical"
        android:padding="5dp"
        tools:layout_editor_absoluteX="-12dp"
        tools:layout_editor_absoluteY="-89dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meet LMS," />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="291dp"
        android:layout_height="226dp"
        android:layout_marginTop="232dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iconvisible" />

    <Button
        android:id="@+id/btnClick"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#137b64"
        android:text="Get Started"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/btnClick2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView1" />

    <Button
        android:id="@+id/btnClick2"
        android:layout_width="268dp"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#137b64"
        android:text="I already have an account"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnClick" />

</androidx.constraintlayout.widget.ConstraintLayout>
